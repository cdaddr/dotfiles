[core]
	excludesfile = ~/.gitignore
    # pager = less -FRSX
    pager = delta
	abbrev = auto
[color]
	status = auto
	branch = auto
	ui = auto
	pager = 1
# [diff]
# 	external = git_diff_wrapper
# [pager]
# 	diff = true
[alias]
	last = log -1 HEAD
	co = checkout
	st = status -sb
	stat = diff --stat
	ci = commit
	ca = commit -a
	br = branch -a
	logstat = log --stat
	logf = log --pretty=fuller
	logs = log --pretty=tformat:'%Cred%h %Creset%s %Cblue(%cr - %an)'
    logg = log --date=format:'%a %b %e, %Y' --pretty=format:'%C(yellow)%h%C(reset) %s %C(cyan)%cd%C(reset) %C(blue)%an%C(reset) %C(green)%d%C(reset)' --graph
    lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ls = ls-tree -rt --abbrev
	amend = commit --amend
	history = log --follow -p
	stageall = add -A
	stage = add -u

	unstage = restore --staged
	wt = restore --worktree --staged

[credential]
	helper = cache --timeout=3600
[user]
	name = Brian Carper
	email = brian@carper.ca
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pull]
	rebase = true
[rebase]
	autoStash = true
[init]
	defaultBranch = main
[merge]
	conflictStyle = zdiff3
[log]
	abbrevCommit = true
[status]
    showUntrackedFiles = all
