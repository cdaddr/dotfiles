{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
        "os": "#ACB0BE",
        "pink": "#F5BDE6",
        "red": "#F38BA8",
        "lavender": "#B7BDF8",
        "blue":  "#8AADF4",
        "wight": "#FFFFFF",
        "text": "#11111b"
  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "p:blue",
          "foreground": "transparent",
          "style": "diamond",
          "template": "\ue0bc\ue0bb",
          "type": "text",
          "force": true
        },
        {
          "background": "p:blue",
          "foreground": "p:text",
          "powerline_symbol": "\ue0bc",
          "leading_diamond": "\ue0ba",
          "style": "diamond",
          "template": "{{.Icon}}",
          "type": "os"
        },
        {
          "background": "p:blue",
          "foreground": "p:text",
          "powerline_symbol": "\ue0bc",
          "style": "diamond",
          "template": "{{ if .SSHSession }} (ssh){{ end }} {{ .HostName }} ",
          "type": "session"
        },
        {
          "background": "p:pink",
          "foreground": "p:text",
          "properties": {
            "folder_icon": "â€¦",
            "home_icon": "~",
            "style": "agnoster"
          },
          "powerline_symbol": "\ue0bc",
          "style": "powerline",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "background": "p:lavender",
          "foreground": "p:text",
          "style": "powerline",
          "properties": {
            "branch_icon": "\ue725 ",
            "cherry_pick_icon": "\ue29b ",
            "commit_icon": "\uf417 ",
            "fetch_status": false,
            "fetch_upstream_icon": false,
            "merge_icon": "\ue727 ",
            "no_commits_icon": "\uf0c3 ",
            "rebase_icon": "\ue728 ",
            "revert_icon": "\uf0e2 ",
            "tag_icon": "\uf412 "
          },
          "powerline_symbol": "\ue0bc",
          "template": " {{ .HEAD }} ",
          "type": "git"
        },
        {
          "background": "p:red",
          "foreground": "transparent",
          "trailing_diamond": "\ue0bc",
          "style": "diamond",
          "template": "\ue0bb\ue0bb",
          "type": "text",
          "force": true
        },
        {
          "background": "transparent",
          "foreground": "p:red",
          "trailing_diamond": "\ue0bc",
          "style": "plain",
          "template": "{{ if ne .Code 0 }} ({{ .Code }}){{ end }}",
          "type": "text",
          "force": true
        }
      ],
      "type": "prompt"
    }
  ],
  "transient_prompt": {
    "background": "p:blue",
    "foreground": "p:text",
    "template": "\ue0bc {{ .Shell }} \ue0ba<text,transparent> </>"
  },
  "final_space": true,
  "version": 3
}
