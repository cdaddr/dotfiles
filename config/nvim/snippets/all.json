{
  "Datetime RFC 3339": {
    "prefix": "d3339",
    "body": "$CURRENT_YEAR-$CURRENT_MONTH-${CURRENT_DATE}T$CURRENT_HOUR:$CURRENT_MINUTE:${CURRENT_SECOND}Z",
    "description": "Datetime in RFC 3339 format"
  },
  "Directory of current file": {
    "prefix": "!wd",
    "body": "$TM_DIRECTORY${1}"
  },
  "Full path of current file": {
    "prefix": "!path",
    "body": "$TM_FILEPATH${1}"
  },
  "Filename of current file": {
    "prefix": "!fn",
    "body": "$TM_FILENAME${1}"
  },
  "Snippet template": {
    "prefix": "!snip",
    "body": [
      "\"${1:Snippet Description}\": {",
      "  \"prefix\": \"${2:prefix}\",",
      "  \"body\": \"${3:body}\"",
      "}$4"
    ]
  },
  "Email": {
    "prefix": "!eml",
    "body": "brian@carper.ca"
  }
}
